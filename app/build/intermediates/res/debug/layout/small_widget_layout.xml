<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smallWgRelativeLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_centerInParent="true"
    android:background="@drawable/wg_bg_shape"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/smallWgLocText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:text="______"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sm_widget_text_size" />

    <TextView
        android:id="@+id/smallWgTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_widget_text_margin_top"
        android:text="@string/time_wdg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sm_widget_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/smallWgPrayerTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_widget_text_margin_top"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sm_widget_text_size"
        android:textStyle="bold" />

</LinearLayout>
